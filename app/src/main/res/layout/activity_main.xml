<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/pptLayout"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </FrameLayout>
    <com.zhangbin.paint.video.view.DragFrameLayout
        android:id="@+id/dragframeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:visibility="visible">
        <tv.danmaku.ijk.media.example.widget.media.IjkDragVideoView
            android:id="@+id/ijk_videoView"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_red"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="166dp"
            android:clickable="false"
            android:longClickable="false"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv_videoView"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="166dp"
            android:background="@drawable/bg"
            android:visibility="visible"/>
    </com.zhangbin.paint.video.view.DragFrameLayout>
    <TextView
        android:id="@+id/sample_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:lineSpacingExtra="4dp"
        android:textStyle="bold"
        android:text="连接互联服务ing"/>
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <Button
            android:id="@+id/iv_go_back"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:visibility="visible"/>
        <Button
            android:id="@+id/jx_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="解析" />
        <Button
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="撤销" />
        <Button
            android:id="@+id/redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="恢复" />
        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空" />
        <Button
            android:id="@+id/is_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全屏" />
    </LinearLayout>
</FrameLayout>