<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/pptLayout"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </FrameLayout>

    <com.zhangbin.paint.DragTextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:longClickable="false"
        android:layout_gravity="left"
        android:text="基础作业! \n 三年级!"
        android:gravity="center"
        android:layout_marginLeft="180dp"/>
    <Button
        android:id="@+id/jx_next"
        android:text="解析"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"/>
    <Button
        android:id="@+id/open"
        android:text="关闭"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_undo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="撤销"/>
            <Button
                android:id="@+id/btn_redo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="还原" />
                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="清空"/>

                <Button
                    android:id="@+id/btn_drawcycle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tuya_circle_selector"
                    android:button="@null" />

                <Button
                    android:id="@+id/btn_drawrec"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tuya_rectangle_selector"
                    android:button="@null" />

                <Button
                    android:id="@+id/btn_drawarrow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tuya_arrow_selector"
                    android:button="@null" />

                <Button
                    android:id="@+id/btn_null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tuya_save_selector"
                    android:button="@null"
                    android:visibility="gone" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bottom_boardstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <Button
            android:id="@+id/btn_paint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="画笔"
            />
            <Button
                android:id="@+id/iv_reaserstyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="橡皮"
                />
            <EditText
                android:id="@+id/et_paint_color"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="#000000"
                android:hint="画笔颜色"
                />
            <EditText
                android:id="@+id/et_paint_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:inputType="number|numberDecimal"
                android:hint="画笔粗细"
                />
            <EditText
                android:id="@+id/et_eraser_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:digits="0123456789."
                android:inputType="number|numberDecimal"
                android:hint="橡皮大小"
                />

        </LinearLayout>
    </LinearLayout>



</FrameLayout>